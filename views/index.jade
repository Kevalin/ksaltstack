extends layout

block content
  #login-box.form-box
    .header 登录
    form(ng-controller="loginCtrl", name="loginForm")
      .body.bg-gray
        .form-group
          input.form-control(name="username", type="username", placeholder="用户名", ng-model="user.username", required)
        .form-group
          input.form-control(name="password", type="password", placeholder="密码", ng-model="user.password", required)
        .form-group
          input(type='checkbox', name='记住我')
          |  记住我
      .footer
        button.btn.bg-olive.btn-block(type="button", ng-click="submit()", ng-disabled="loginForm.username.$invalid || loginForm.password.$invalid") 登录
  script(src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js")
  script(src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js")
  script(src="/javascripts/angularjs/angular.min.js")
  script(src="/javascripts/index/main.js")